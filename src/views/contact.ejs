<%- include('./partials/header') %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4" style="color: #CE1126;">Hubungi Kami</h2>
          
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card h-100 border-0">
                <div class="card-body bg-light rounded">
                  <h4 class="mb-3" style="color: #CE1126;">Informasi Kontak</h4>
                  <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-map-marker-alt me-2" style="color: #CE1126;"></i> Jl. Medan Merdeka Utara No. 10, Jakarta Pusat</li>
                    <li class="mb-2"><i class="fas fa-phone me-2" style="color: #CE1126;"></i> (021) 3456-7890</li>
                    <li class="mb-2"><i class="fas fa-envelope me-2" style="color: #CE1126;"></i> info@datapemerintah.go.id</li>
                    <li class="mb-2"><i class="fas fa-clock me-2" style="color: #CE1126;"></i> Senin - Jumat: 08.00 - 16.00 WIB</li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card h-100 border-0">
                <div class="card-body bg-light rounded">
                  <h4 class="mb-3" style="color: #CE1126;">Media Sosial</h4>
                  <div class="d-flex flex-column gap-2">
                    <a href="#" class="btn btn-outline-danger"><i class="fab fa-facebook me-2"></i> Portal Data Pemerintah</a>
                    <a href="#" class="btn btn-outline-danger"><i class="fab fa-twitter me-2"></i> @DataPemerintah</a>
                    <a href="#" class="btn btn-outline-danger"><i class="fab fa-instagram me-2"></i> @portaldatapemerintah</a>
                    <a href="#" class="btn btn-outline-danger"><i class="fab fa-youtube me-2"></i> Portal Data Pemerintah</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="card border-0 mb-4">
            <div class="card-body bg-light rounded">
              <h4 class="mb-3" style="color: #CE1126;">Kirim Pesan</h4>
              <form id="contactForm">
                <div class="mb-3">
                  <label for="name" class="form-label">Nama Lengkap</label>
                  <input type="text" class="form-control" id="name" required>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                  <label for="subject" class="form-label">Subjek</label>
                  <input type="text" class="form-control" id="subject" required>
                </div>
                <div class="mb-3">
                  <label for="message" class="form-label">Pesan</label>
                  <textarea class="form-control" id="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-danger">Kirim Pesan</button>
              </form>
            </div>
          </div>
          
          <div class="card border-0">
            <div class="card-body bg-light rounded">
              <h4 class="mb-3" style="color: #CE1126;">Lokasi Kami</h4>
              <div class="ratio ratio-16x9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.666510842894!2d106.82496851476913!3d-6.1701566955287!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f5d2e764b12d%3A0x3d2ad6e1e0e9bcc8!2sIstana%20Merdeka%2C%20Jakarta!5e0!3m2!1sid!2sid!4v1628471098700!5m2!1sid!2sid" allowfullscreen="" loading="lazy" class="border-0 rounded"></iframe>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('contactForm').addEventListener('submit', function(e) {
  e.preventDefault();
  alert('Terima kasih! Pesan Anda telah dikirim.');
  this.reset();
});
</script>

<%- include('./partials/footer') %>
