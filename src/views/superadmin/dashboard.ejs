<!-- Super Admin Dashboard -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-tachometer-alt me-2"></i> Dashboard Super Admin</h2>
  <span class="badge bg-danger fs-6"><%= new Date().toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-lg-3">
    <div class="card stat-card primary mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-subtitle text-muted">Total Berita</h6>
            <h2 class="card-title mb-0"><%= newsCount %></h2>
          </div>
          <div class="icon text-danger">
            <i class="fas fa-newspaper"></i>
          </div>
        </div>
        <div class="mt-3">
          <span class="badge bg-success"><i class="fas fa-calendar me-1"></i> Bulan ini: <%= monthlyNewsCount %></span>
        </div>
      </div>
      <div class="card-footer bg-white">
        <a href="/superadmin/news" class="text-decoration-none text-danger">
          <small>Lihat Detail <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3">
    <div class="card stat-card success mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-subtitle text-muted">Total File</h6>
            <h2 class="card-title mb-0"><%= fileCount %></h2>
          </div>
          <div class="icon text-success">
            <i class="fas fa-file-alt"></i>
          </div>
        </div>
        <div class="mt-3">
          <span class="badge bg-danger"><i class="fas fa-lock me-1"></i> Terenkripsi</span>
        </div>
      </div>
      <div class="card-footer bg-white">
        <a href="/superadmin/files" class="text-decoration-none text-success">
          <small>Lihat Detail <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3">
    <div class="card stat-card warning mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-subtitle text-muted">Total Pengguna</h6>
            <h2 class="card-title mb-0"><%= userCount %></h2>
          </div>
          <div class="icon text-warning">
            <i class="fas fa-users"></i>
          </div>
        </div>
        <div class="mt-3">
          <span class="badge bg-info"><i class="fas fa-user-tie me-1"></i> Admin: <%= adminCount %></span>
        </div>
      </div>
      <div class="card-footer bg-white">
        <a href="/superadmin/users" class="text-decoration-none text-warning">
          <small>Lihat Detail <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-lg-3">
    <div class="card stat-card info mb-4">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-subtitle text-muted">Akses</h6>
            <h2 class="card-title mb-0">Super Admin</h2>
          </div>
          <div class="icon text-info">
            <i class="fas fa-user-shield"></i>
          </div>
        </div>
        <div class="mt-3">
          <span class="badge bg-danger"><i class="fas fa-crown me-1"></i> Hak Akses Penuh</span>
        </div>
      </div>
      <div class="card-footer bg-white">
        <a href="/users/change-password" class="text-decoration-none text-info">
          <small>Ubah Password <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Recent Users -->
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i> Pengguna Terbaru</h5>
        <a href="/superadmin/users" class="btn btn-sm btn-outline-danger">Kelola Pengguna</a>
      </div>
      <div class="card-body p-0">
        <% if (recentUsers && recentUsers.length > 0) { %>
          <div class="list-group list-group-flush">
            <% recentUsers.forEach(user => { %>
              <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <h6 class="mb-1">
                    <i class="fas fa-user me-2"></i> <%= user.fullName %>
                  </h6>
                  <span class="badge bg-<%= user.role === 'superadmin' ? 'danger' : (user.role === 'admin' ? 'warning' : 'info') %>">
                    <%= user.role %>
                  </span>
                </div>
                <small class="text-muted">
                  <i class="fas fa-at me-1"></i> <%= user.email %>
                  <% if (user.lastLogin) { %>
                    <span class="mx-2">|</span>
                    <i class="fas fa-clock me-1"></i> Login: <%= new Date(user.lastLogin).toLocaleDateString('id-ID') %>
                  <% } %>
                </small>
              </div>
            <% }) %>
          </div>
          <div class="card-footer bg-white text-center">
            <a href="/superadmin/users/create" class="btn btn-danger">
              <i class="fas fa-user-plus me-1"></i> Tambah Pengguna Baru
            </a>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <p>Belum ada pengguna terbaru.</p>
            <a href="/superadmin/users/create" class="btn btn-danger">
              <i class="fas fa-user-plus me-1"></i> Tambah Pengguna Baru
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Latest News -->
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i> Berita Terbaru</h5>
        <a href="/superadmin/news" class="btn btn-sm btn-outline-danger">Kelola Berita</a>
      </div>
      <div class="card-body p-0">
        <% if (latestNews && latestNews.length > 0) { %>
          <div class="list-group list-group-flush">
            <% latestNews.forEach(news => { %>
              <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <h6 class="mb-1"><%= news.title %></h6>
                  <div>
                    <span class="badge bg-<%= news.status === 'published' ? 'success' : (news.status === 'draft' ? 'warning' : 'secondary') %>">
                      <%= news.status === 'published' ? 'Diterbitkan' : (news.status === 'draft' ? 'Draft' : 'Diarsipkan') %>
                    </span>
                  </div>
                </div>
                <small class="text-muted">
                  <i class="far fa-calendar-alt me-1"></i> <%= new Date(news.publishDate).toLocaleDateString('id-ID') %>
                </small>
                <div class="mt-2">
                  <a href="/superadmin/news/<%= news.id %>/edit" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <a href="/news/<%= news.slug %>" target="_blank" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-eye"></i> Lihat
                  </a>
                </div>
              </div>
            <% }) %>
          </div>
          <div class="card-footer bg-white text-center">
            <a href="/superadmin/news/create" class="btn btn-danger">
              <i class="fas fa-plus me-1"></i> Tambah Berita Baru
            </a>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
            <p>Belum ada berita.</p>
            <a href="/superadmin/news/create" class="btn btn-danger">
              <i class="fas fa-plus me-1"></i> Tambah Berita Baru
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Recent Files -->
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i> File Terbaru</h5>
        <a href="/superadmin/files" class="btn btn-sm btn-outline-danger">Kelola File</a>
      </div>
      <div class="card-body p-0">
        <% if (recentFiles && recentFiles.length > 0) { %>
          <div class="list-group list-group-flush">
            <% recentFiles.forEach(file => { %>
              <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <h6 class="mb-1">
                    <i class="fas fa-<%= file.fileType.includes('image') ? 'image' : (file.fileType.includes('pdf') ? 'file-pdf' : (file.fileType.includes('word') ? 'file-word' : (file.fileType.includes('excel') ? 'file-excel' : (file.fileType.includes('zip') ? 'file-archive' : 'file-alt')))) %> me-2"></i>
                    <%= file.originalName %>
                  </h6>
                  <span class="badge bg-<%= file.accessLevel === 'superadmin' ? 'danger' : (file.accessLevel === 'admin' ? 'warning' : 'info') %>">
                    <%= file.accessLevel %>
                  </span>
                </div>
                <small class="text-muted">
                  <i class="fas fa-tag me-1"></i> <%= file.category || 'Tanpa Kategori' %>
                  <span class="mx-2">|</span>
                  <i class="fas fa-weight me-1"></i> <%= (file.fileSize / 1024).toFixed(2) %> KB
                </small>
                <div class="mt-2">
                  <a href="/superadmin/files/<%= file.id %>/edit" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <a href="/files/<%= file.id %>/download" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-download"></i> Unduh
                  </a>
                </div>
              </div>
            <% }) %>
          </div>
          <div class="card-footer bg-white text-center">
            <a href="/superadmin/files/upload" class="btn btn-danger">
              <i class="fas fa-upload me-1"></i> Upload File Baru
            </a>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
            <p>Belum ada file.</p>
            <a href="/superadmin/files/upload" class="btn btn-danger">
              <i class="fas fa-upload me-1"></i> Upload File Baru
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
