<!-- User Management -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-users me-2"></i> Manajemen Pengguna</h2>
  <a href="/superadmin/users/create" class="btn btn-danger">
    <i class="fas fa-user-plus me-1"></i> Tambah Pengguna Baru
  </a>
</div>

<div class="card">
  <div class="card-header bg-white">
    <div class="row">
      <div class="col-md-6 mb-2 mb-md-0">
        <form action="/superadmin/users" method="get" class="d-flex">
          <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Cari pengguna..." value="<%= search || '' %>">
            <button type="submit" class="btn btn-outline-danger">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="d-flex justify-content-md-end">
          <select name="role" class="form-select me-2" style="max-width: 150px;" onchange="window.location.href=`/superadmin/users?role=${this.value}&search=<%= search || '' %>`">
            <option value="">Semua Peran</option>
            <option value="user" <%= role === 'user' ? 'selected' : '' %>>User</option>
            <option value="admin" <%= role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="superadmin" <%= role === 'superadmin' ? 'selected' : '' %>>Super Admin</option>
          </select>
          <select name="sortBy" class="form-select" style="max-width: 200px;" onchange="window.location.href=`/superadmin/users?sortBy=${this.value}&role=<%= role || '' %>&search=<%= search || '' %>`">
            <option value="newest" <%= sortBy === 'newest' ? 'selected' : '' %>>Terbaru</option>
            <option value="oldest" <%= sortBy === 'oldest' ? 'selected' : '' %>>Terlama</option>
            <option value="name_asc" <%= sortBy === 'name_asc' ? 'selected' : '' %>>Nama (A-Z)</option>
            <option value="name_desc" <%= sortBy === 'name_desc' ? 'selected' : '' %>>Nama (Z-A)</option>
          </select>
        </div>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Nama Lengkap</th>
          <th>Email</th>
          <th>Peran</th>
          <th>Status</th>
          <th>Dibuat</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length > 0) { %>
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= (page - 1) * limit + index + 1 %></td>
              <td>
                <div class="d-flex align-items-center">
                  <div class="avatar me-2 bg-<%= user.role === 'superadmin' ? 'danger' : (user.role === 'admin' ? 'warning' : 'info') %> text-white">
                    <%= user.fullName.substring(0, 2).toUpperCase() %>
                  </div>
                  <div>
                    <%= user.fullName %>
                    <% if (user.lastLogin) { %>
                      <div class="small text-muted">Login: <%= new Date(user.lastLogin).toLocaleDateString('id-ID') %></div>
                    <% } %>
                  </div>
                </div>
              </td>
              <td><%= user.email %></td>
              <td>
                <span class="badge bg-<%= user.role === 'superadmin' ? 'danger' : (user.role === 'admin' ? 'warning' : 'info') %>">
                  <%= user.role %>
                </span>
              </td>
              <td>
                <% if (user.isActive) { %>
                  <span class="badge bg-success">Aktif</span>
                <% } else { %>
                  <span class="badge bg-secondary">Tidak Aktif</span>
                <% } %>
              </td>
              <td><%= new Date(user.createdAt).toLocaleDateString('id-ID') %></td>
              <td>
                <div class="btn-group">
                  <a href="/superadmin/users/<%= user.id %>" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/superadmin/users/<%= user.id %>/edit" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button type="button" class="btn btn-sm btn-outline-danger" 
                          data-bs-toggle="modal" 
                          data-bs-target="#deleteModal" 
                          data-id="<%= user.id %>" 
                          data-name="<%= user.fullName %>">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center py-4">
              <i class="fas fa-users fa-2x text-muted mb-3"></i>
              <p>Tidak ada pengguna yang ditemukan.</p>
              <a href="/superadmin/users/create" class="btn btn-sm btn-danger">
                <i class="fas fa-user-plus me-1"></i> Tambah Pengguna Baru
              </a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
  <% if (users && users.length > 0) { %>
    <div class="card-footer bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          Menampilkan <%= (page - 1) * limit + 1 %> sampai <%= Math.min(page * limit, totalItems) %> dari <%= totalItems %> pengguna
        </div>
        <nav>
          <ul class="pagination mb-0">
            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/superadmin/users?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= search || '' %>&role=<%= role || '' %>&sortBy=<%= sortBy || '' %>">
                <i class="fas fa-angle-left"></i>
              </a>
            </li>
            
            <% for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) { %>
              <li class="page-item <%= page == i ? 'active' : '' %>">
                <a class="page-link" href="/superadmin/users?page=<%= i %>&limit=<%= limit %>&search=<%= search || '' %>&role=<%= role || '' %>&sortBy=<%= sortBy || '' %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            
            <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/superadmin/users?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= search || '' %>&role=<%= role || '' %>&sortBy=<%= sortBy || '' %>">
                <i class="fas fa-angle-right"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  <% } %>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Hapus</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus pengguna <strong id="userName"></strong>?</p>
        <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i> Aksi ini tidak dapat dibatalkan dan semua data yang terkait dengan pengguna ini akan ikut terhapus.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <form id="deleteForm" action="/superadmin/users/:id/delete" method="POST">
          <button type="submit" class="btn btn-danger">Hapus Pengguna</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deleteModal = document.getElementById('deleteModal');
    if (deleteModal) {
      deleteModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const userId = button.getAttribute('data-id');
        const userName = button.getAttribute('data-name');
        
        document.getElementById('userName').textContent = userName;
        document.getElementById('deleteForm').action = `/superadmin/users/${userId}/delete`;
      });
    }
  });
</script>
