<!-- Personal Data Management -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-database me-2"></i> Manajemen Data Pribadi</h2>
  <a href="/superadmin/personal-data/create" class="btn btn-danger">
    <i class="fas fa-plus me-1"></i> Tambah Data Baru
  </a>
</div>

<div class="card">
  <div class="card-header bg-white">
    <div class="row">
      <div class="col-md-6 mb-2 mb-md-0">
        <form action="/superadmin/personal-data" method="get" class="d-flex">
          <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Cari data..." value="<%= search || '' %>">
            <button type="submit" class="btn btn-outline-danger">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="d-flex justify-content-md-end gap-2">
          <select name="category" class="form-select" style="max-width: 150px;" onchange="window.location.href=`/superadmin/personal-data?category=${this.value}&user=<%= userId || '' %>&search=<%= search || '' %>`">
            <option value="">Semua Kategori</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat %>" <%= category === cat ? 'selected' : '' %>><%= cat %></option>
            <% }) %>
          </select>
          
          <select name="user" class="form-select" style="max-width: 180px;" onchange="window.location.href=`/superadmin/personal-data?user=${this.value}&category=<%= category || '' %>&search=<%= search || '' %>`">
            <option value="">Semua Pengguna</option>
            <% users.forEach(user => { %>
              <option value="<%= user.id %>" <%= userId === user.id ? 'selected' : '' %>><%= user.fullName %></option>
            <% }) %>
          </select>
          
          <select name="sortBy" class="form-select" style="max-width: 180px;" onchange="window.location.href=`/superadmin/personal-data?sortBy=${this.value}&category=<%= category || '' %>&user=<%= userId || '' %>&search=<%= search || '' %>`">
            <option value="newest" <%= sortBy === 'newest' ? 'selected' : '' %>>Terbaru</option>
            <option value="oldest" <%= sortBy === 'oldest' ? 'selected' : '' %>>Terlama</option>
            <option value="title_asc" <%= sortBy === 'title_asc' ? 'selected' : '' %>>Judul (A-Z)</option>
            <option value="title_desc" <%= sortBy === 'title_desc' ? 'selected' : '' %>>Judul (Z-A)</option>
          </select>
        </div>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Judul</th>
          <th>Kategori</th>
          <th>Pengguna</th>
          <th>Status</th>
          <th>Tanggal Dibuat</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (personalData && personalData.length > 0) { %>
          <% personalData.forEach((data, index) => { %>
            <tr>
              <td><%= (page - 1) * limit + index + 1 %></td>
              <td>
                <div class="d-flex align-items-center">
                  <div class="data-icon me-2 text-<%= data.isEncrypted ? 'danger' : 'success' %>">
                    <i class="fas fa-<%= data.isEncrypted ? 'lock' : 'unlock' %>"></i>
                  </div>
                  <div>
                    <h6 class="mb-0"><%= data.title %></h6>
                    <small class="text-muted"><%= data.description ? data.description.substring(0, 40) + (data.description.length > 40 ? '...' : '') : '' %></small>
                  </div>
                </div>
              </td>
              <td><%= data.category %></td>
              <td>
                <% if (data.user) { %>
                  <div class="d-flex align-items-center">
                    <div class="avatar avatar-sm me-2 bg-<%= data.user.role === 'superadmin' ? 'danger' : (data.user.role === 'admin' ? 'warning' : 'info') %>">
                      <%= data.user.fullName.substring(0, 2).toUpperCase() %>
                    </div>
                    <span><%= data.user.fullName %></span>
                  </div>
                <% } else { %>
                  <span class="text-muted">-</span>
                <% } %>
              </td>
              <td>
                <% if (data.isEncrypted) { %>
                  <span class="badge bg-danger"><i class="fas fa-lock me-1"></i> Terenkripsi</span>
                <% } else { %>
                  <span class="badge bg-success"><i class="fas fa-unlock me-1"></i> Tidak Terenkripsi</span>
                <% } %>
              </td>
              <td><%= new Date(data.createdAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td>
                <div class="btn-group">
                  <a href="/superadmin/personal-data/<%= data.id %>" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/superadmin/personal-data/<%= data.id %>/edit" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button type="button" class="btn btn-sm btn-outline-danger" 
                          data-bs-toggle="modal" 
                          data-bs-target="#deleteModal" 
                          data-id="<%= data.id %>" 
                          data-title="<%= data.title %>">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center py-4">
              <i class="fas fa-database fa-3x text-muted mb-3"></i>
              <p>Tidak ada data pribadi yang ditemukan.</p>
              <a href="/superadmin/personal-data/create" class="btn btn-danger">
                <i class="fas fa-plus me-1"></i> Tambah Data Baru
              </a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
  <% if (personalData && personalData.length > 0) { %>
    <div class="card-footer bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          Menampilkan <%= (page - 1) * limit + 1 %> sampai <%= Math.min(page * limit, totalItems) %> dari <%= totalItems %> data
        </div>
        <nav>
          <ul class="pagination mb-0">
            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
              <a class="page-link" href="/superadmin/personal-data?page=<%= page - 1 %>&limit=<%= limit %>&category=<%= category || '' %>&user=<%= userId || '' %>&search=<%= search || '' %>">
                <i class="fas fa-angle-left"></i>
              </a>
            </li>
            
            <% for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) { %>
              <li class="page-item <%= page == i ? 'active' : '' %>">
                <a class="page-link" href="/superadmin/personal-data?page=<%= i %>&limit=<%= limit %>&category=<%= category || '' %>&user=<%= userId || '' %>&search=<%= search || '' %>">
                  <%= i %>
                </a>
              </li>
            <% } %>
            
            <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="/superadmin/personal-data?page=<%= page + 1 %>&limit=<%= limit %>&category=<%= category || '' %>&user=<%= userId || '' %>&search=<%= search || '' %>">
                <i class="fas fa-angle-right"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  <% } %>
</div>

<!-- Data Stats -->
<div class="row mt-4">
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Data Berdasarkan Kategori</h5>
      </div>
      <div class="card-body">
        <% if (categoryStats && categoryStats.length > 0) { %>
          <div class="chart-container" style="height: 300px;">
            <input type="hidden" id="categoryChartData" value='<%= JSON.stringify({
              labels: categoryStats.map(item => item.category || "Tanpa Kategori"),
              data: categoryStats.map(item => item.count)
            }) %>'>
            <canvas id="categoryChart"></canvas>
          </div>
        <% } else { %>
          <div class="text-center py-4">
            <p>Belum ada data statistik kategori.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i> Data Berdasarkan Pengguna</h5>
      </div>
      <div class="card-body">
        <% if (userStats && userStats.length > 0) { %>
          <div class="chart-container" style="height: 300px;">
            <input type="hidden" id="userChartData" value='<%= JSON.stringify({
              labels: userStats.map(item => item.fullName || "Unknown"),
              data: userStats.map(item => item.count)
            }) %>'>
            <canvas id="userChart"></canvas>
          </div>
        <% } else { %>
          <div class="text-center py-4">
            <p>Belum ada data statistik pengguna.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Hapus</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus data <strong id="dataTitle"></strong>?</p>
        <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i> Aksi ini tidak dapat dibatalkan.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <form id="deleteForm" action="/superadmin/personal-data/:id/delete" method="POST">
          <button type="submit" class="btn btn-danger">Hapus Data</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deleteModal = document.getElementById('deleteModal');
    if (deleteModal) {
      deleteModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const dataId = button.getAttribute('data-id');
        const dataTitle = button.getAttribute('data-title');
        
        document.getElementById('dataTitle').textContent = dataTitle;
        document.getElementById('deleteForm').action = `/superadmin/personal-data/${dataId}/delete`;
      });
    }
    
    // Initialize charts
    if (typeof Chart !== 'undefined') {
      // Category Chart
      const categoryChartData = document.getElementById('categoryChartData');
      const categoryCtx = document.getElementById('categoryChart');
      
      if (categoryChartData && categoryCtx) {
        try {
          const categoryData = JSON.parse(categoryChartData.value);
          new Chart(categoryCtx, {
            type: 'pie',
            data: {
              labels: categoryData.labels,
              datasets: [{
                label: 'Jumlah Data',
                data: categoryData.data,
                backgroundColor: [
                  'rgba(255, 99, 132, 0.7)',
                  'rgba(54, 162, 235, 0.7)',
                  'rgba(255, 206, 86, 0.7)',
                  'rgba(75, 192, 192, 0.7)',
                  'rgba(153, 102, 255, 0.7)',
                  'rgba(255, 159, 64, 0.7)'
                ],
                borderWidth: 1
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false
            }
          });
        } catch (e) {
          console.error('Error initializing category chart:', e);
        }
      }
      
      // User Chart
      const userChartData = document.getElementById('userChartData');
      const userCtx = document.getElementById('userChart');
      
      if (userChartData && userCtx) {
        try {
          const userData = JSON.parse(userChartData.value);
          new Chart(userCtx, {
            type: 'bar',
            data: {
              labels: userData.labels,
              datasets: [{
                label: 'Jumlah Data',
                data: userData.data,
                backgroundColor: 'rgba(54, 162, 235, 0.7)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                y: {
                  beginAtZero: true,
                  ticks: {
                    precision: 0
                  }
                }
              }
            }
          });
        } catch (e) {
          console.error('Error initializing user chart:', e);
        }
      }
    }
  });
</script>

<style>
  .avatar-sm {
    width: 24px;
    height: 24px;
    line-height: 24px;
    font-size: 10px;
    display: inline-block;
    text-align: center;
    border-radius: 50%;
    color: #fff;
  }
  
  .data-icon {
    width: 24px;
    text-align: center;
  }
  
  .chart-container {
    position: relative;
    width: 100%;
  }
</style>
