<!-- Edit File Form -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-edit me-2"></i> Edit File</h2>
  <a href="/superadmin/files" class="btn btn-outline-secondary">
    <i class="fas fa-arrow-left me-1"></i> Kembali ke Daftar File
  </a>
</div>

<div class="card mb-4">
  <div class="card-header bg-white">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Edit Informasi File</h5>
      <span class="badge bg-<%= file.accessLevel === 'public' ? 'info' : (file.accessLevel === 'user' ? 'success' : (file.accessLevel === 'admin' ? 'warning' : 'danger')) %>">
        <%= file.accessLevel %>
      </span>
    </div>
  </div>
  <div class="card-body">
    <div class="row mb-4">
      <div class="col-lg-4 mb-3 mb-lg-0">
        <div class="card h-100">
          <div class="card-body text-center">
            <div class="file-preview mb-3">
              <% if (file.fileType.includes('image')) { %>
                <img src="/files/<%= file.id %>/thumbnail" class="img-fluid img-thumbnail" style="max-height: 200px;" alt="<%= file.originalName %>">
              <% } else { %>
                <i class="fas fa-<%= file.fileType.includes('pdf') ? 'file-pdf' : (file.fileType.includes('word') ? 'file-word' : (file.fileType.includes('excel') ? 'file-excel' : (file.fileType.includes('zip') || file.fileType.includes('rar') ? 'file-archive' : 'file-alt'))) %> fa-5x text-<%= file.fileType.includes('pdf') ? 'danger' : (file.fileType.includes('word') ? 'primary' : (file.fileType.includes('excel') ? 'success' : (file.fileType.includes('zip') || file.fileType.includes('rar') ? 'warning' : 'secondary'))) %>"></i>
              <% } %>
            </div>
            
            <h6><%= file.originalName %></h6>
            <p class="text-muted small mb-2"><%= file.fileType %> (<%= (file.fileSize / 1024).toFixed(2) %> KB)</p>
            
            <div class="d-grid gap-2">
              <a href="/files/<%= file.id %>/preview" class="btn btn-sm btn-outline-secondary" target="_blank">
                <i class="fas fa-eye me-1"></i> Preview
              </a>
              <a href="/files/<%= file.id %>/download" class="btn btn-sm btn-outline-success">
                <i class="fas fa-download me-1"></i> Download
              </a>
            </div>
          </div>
          <div class="card-footer bg-light">
            <small class="text-muted">
              <i class="fas fa-upload me-1"></i> Diunggah: <%= new Date(file.createdAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %>
              <% if (file.uploadedBy) { %>
                <br>
                <i class="fas fa-user me-1"></i> Oleh: <%= file.uploadedBy.fullName %>
              <% } %>
            </small>
          </div>
        </div>
      </div>
      
      <div class="col-lg-8">
        <form action="/superadmin/files/<%= file.id %>/update" method="POST" class="needs-validation" novalidate>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="title" class="form-label">Judul File <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="title" name="title" value="<%= file.title %>" required>
              <div class="invalid-feedback">
                Silakan masukkan judul file.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="category" class="form-label">Kategori <span class="text-danger">*</span></label>
              <select class="form-select" id="category" name="category" required>
                <% categories.forEach(category => { %>
                  <option value="<%= category %>" <%= file.category === category ? 'selected' : '' %>><%= category %></option>
                <% }); %>
                <option value="other" <%= !categories.includes(file.category) ? 'selected' : '' %>>Lainnya</option>
              </select>
              <div class="invalid-feedback">
                Silakan pilih kategori file.
              </div>
            </div>

            <div class="col-md-12 mb-3 <%= categories.includes(file.category) ? 'd-none' : '' %>" id="otherCategoryGroup">
              <label for="otherCategory" class="form-label">Kategori Lainnya <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="otherCategory" name="otherCategory" value="<%= !categories.includes(file.category) ? file.category : '' %>">
              <div class="invalid-feedback">
                Silakan masukkan kategori lainnya.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="accessLevel" class="form-label">Level Akses <span class="text-danger">*</span></label>
              <select class="form-select" id="accessLevel" name="accessLevel" required>
                <option value="public" <%= file.accessLevel === 'public' ? 'selected' : '' %>>Public - Dapat diakses oleh semua orang</option>
                <option value="user" <%= file.accessLevel === 'user' ? 'selected' : '' %>>User - Hanya user yang terdaftar</option>
                <option value="admin" <%= file.accessLevel === 'admin' ? 'selected' : '' %>>Admin - Hanya admin</option>
                <option value="superadmin" <%= file.accessLevel === 'superadmin' ? 'selected' : '' %>>Super Admin - Hanya super admin</option>
              </select>
              <div class="invalid-feedback">
                Silakan pilih level akses.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <label for="tags" class="form-label">Tag (Opsional)</label>
              <input type="text" class="form-control" id="tags" name="tags" value="<%= file.tags ? file.tags.join(', ') : '' %>" placeholder="Pisahkan dengan koma">
              <div class="form-text">Contoh: dokumen, penting, rahasia</div>
            </div>

            <div class="col-md-12 mb-3">
              <label for="description" class="form-label">Deskripsi (Opsional)</label>
              <textarea class="form-control" id="description" name="description" rows="3"><%= file.description || '' %></textarea>
            </div>
            
            <div class="col-md-12">
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isActive" name="isActive" <%= file.isActive ? 'checked' : '' %>>
                <label class="form-check-label" for="isActive">
                  File Aktif
                </label>
                <div class="form-text">File yang tidak aktif tidak dapat dilihat atau diunduh oleh pengguna.</div>
              </div>
            </div>
          </div>
          
          <div class="alert alert-warning mb-4">
            <div class="d-flex">
              <div class="me-3">
                <i class="fas fa-exclamation-triangle fa-2x"></i>
              </div>
              <div>
                <h5 class="alert-heading">Perhatian!</h5>
                <p class="mb-0">
                  File ini <%= file.isEncrypted ? '<strong>terenkripsi</strong>' : 'tidak terenkripsi' %>.
                  <% if (file.isEncrypted) { %>
                    File yang terenkripsi hanya dapat diakses melalui platform ini dan terproteksi dari akses tidak sah.
                  <% } else { %>
                    File yang tidak terenkripsi dapat diakses langsung jika pengguna memiliki link download.
                  <% } %>
                </p>
              </div>
            </div>
          </div>
          
          <hr>
          
          <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
              <i class="fas fa-trash-alt me-1"></i> Hapus File
            </button>
            <div>
              <button type="button" class="btn btn-light me-2" onclick="window.history.back()">
                <i class="fas fa-times me-1"></i> Batal
              </button>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Simpan Perubahan
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- History Card -->
<div class="card">
  <div class="card-header bg-white">
    <h5 class="mb-0"><i class="fas fa-history me-2"></i> Riwayat Akses File</h5>
  </div>
  <div class="card-body">
    <% if (fileHistory && fileHistory.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>Waktu</th>
              <th>Pengguna</th>
              <th>Aksi</th>
              <th>IP Address</th>
              <th>User Agent</th>
            </tr>
          </thead>
          <tbody>
            <% fileHistory.forEach(log => { %>
              <tr>
                <td><%= new Date(log.timestamp).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                <td>
                  <% if (log.user) { %>
                    <div class="d-flex align-items-center">
                      <div class="avatar avatar-sm bg-<%= log.user.role === 'superadmin' ? 'danger' : (log.user.role === 'admin' ? 'warning' : 'info') %> text-white me-2">
                        <%= log.user.fullName.substring(0, 2).toUpperCase() %>
                      </div>
                      <%= log.user.fullName %> 
                      <span class="badge bg-<%= log.user.role === 'superadmin' ? 'danger' : (log.user.role === 'admin' ? 'warning' : 'info') %> ms-2">
                        <%= log.user.role %>
                      </span>
                    </div>
                  <% } else { %>
                    <span class="text-muted">Guest</span>
                  <% } %>
                </td>
                <td>
                  <% if (log.action === 'view') { %>
                    <span class="badge bg-info">Melihat</span>
                  <% } else if (log.action === 'download') { %>
                    <span class="badge bg-success">Mengunduh</span>
                  <% } else if (log.action === 'upload') { %>
                    <span class="badge bg-primary">Mengunggah</span>
                  <% } else if (log.action === 'update') { %>
                    <span class="badge bg-warning">Mengubah</span>
                  <% } else if (log.action === 'delete') { %>
                    <span class="badge bg-danger">Menghapus</span>
                  <% } %>
                </td>
                <td><%= log.ipAddress %></td>
                <td class="text-truncate" style="max-width: 200px;" title="<%= log.userAgent %>">
                  <%= log.userAgent %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-4">
        <i class="fas fa-history fa-3x text-muted mb-3"></i>
        <p>Belum ada riwayat akses untuk file ini.</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Hapus</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus file <strong><%= file.originalName %></strong>?</p>
        <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i> Aksi ini tidak dapat dibatalkan.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <form action="/superadmin/files/<%= file.id %>/delete" method="POST">
          <button type="submit" class="btn btn-danger">Hapus File</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const categorySelect = document.getElementById('category');
    const otherCategoryGroup = document.getElementById('otherCategoryGroup');
    const otherCategoryInput = document.getElementById('otherCategory');
    
    // Form validation
    form.addEventListener('submit', function(e) {
      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      
      if (categorySelect.value === 'other' && !otherCategoryInput.value.trim()) {
        otherCategoryInput.setCustomValidity('Silakan masukkan kategori lainnya');
        e.preventDefault();
      } else {
        otherCategoryInput.setCustomValidity('');
      }
      
      form.classList.add('was-validated');
    });
    
    // Other category option
    categorySelect.addEventListener('change', function() {
      if (this.value === 'other') {
        otherCategoryGroup.classList.remove('d-none');
        otherCategoryInput.required = true;
      } else {
        otherCategoryGroup.classList.add('d-none');
        otherCategoryInput.required = false;
      }
    });
  });
</script>

