<!-- User Dashboard -->
<div class="bg-danger text-white p-4 mb-4 rounded shadow">
  <div class="row align-items-center">
    <div class="col-md-8">
      <h2 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i> Dashboard Pengguna</h2>
      <p class="mb-0">Selamat datang, <%= user.fullName %>! Kelola data dan akses informasi Anda disini.</p>
    </div>
    <div class="col-md-4 text-md-end mt-3 mt-md-0">
      <span class="badge bg-white text-danger fs-6"><i class="fas fa-user me-1"></i> <%= user.username %></span>
    </div>
  </div>
</div>

<div class="row">
  <!-- Quick Actions -->
  <div class="col-lg-4">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-bolt me-2"></i> Akses Cepat</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <a href="/dashboard/personal-data" class="btn btn-outline-danger">
            <i class="fas fa-shield-alt me-2"></i> Data Pribadi Saya
          </a>
          <a href="/dashboard/personal-data/create" class="btn btn-outline-danger">
            <i class="fas fa-plus me-2"></i> Tambah Data Baru
          </a>
          <a href="/news" class="btn btn-outline-danger">
            <i class="fas fa-newspaper me-2"></i> Lihat Berita
          </a>
          <a href="/users/change-password" class="btn btn-outline-danger">
            <i class="fas fa-key me-2"></i> Ubah Password
          </a>
        </div>
      </div>
    </div>
    
    <!-- Data Stats -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Statistik Data</h5>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
          <div>
            <h6 class="mb-0">Total Data Pribadi</h6>
            <small class="text-muted">Data yang tersimpan</small>
          </div>
          <span class="badge bg-danger rounded-pill fs-5"><%= personalDataCount %></span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Latest News -->
  <div class="col-lg-8">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i> Berita Terbaru</h5>
        <a href="/news" class="btn btn-sm btn-outline-danger">Lihat Semua</a>
      </div>
      <div class="card-body p-0">
        <% if (latestNews && latestNews.length > 0) { %>
          <div class="list-group list-group-flush">
            <% latestNews.forEach(news => { %>
              <a href="/news/<%= news.slug %>" class="list-group-item list-group-item-action">
                <div class="row align-items-center">
                  <div class="col-md-2">
                    <img src="<%= news.coverImage || '/images/news-default.jpg' %>" class="img-fluid rounded" alt="<%= news.title %>">
                  </div>
                  <div class="col-md-10">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1"><%= news.title %></h6>
                      <small><%= new Date(news.publishDate).toLocaleDateString('id-ID') %></small>
                    </div>
                    <small class="text-muted"><%= news.summary %></small>
                  </div>
                </div>
              </a>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center p-4">
            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
            <p>Belum ada berita terbaru.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
